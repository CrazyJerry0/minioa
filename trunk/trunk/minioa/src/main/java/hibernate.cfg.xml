<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="show_sql">false</property>
		<property name="hibernate.dialect">org.minioa.core.ExtMySQLInnoDBDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/oa</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">password</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</property>

		<mapping resource="mysql/core_org.hbm.xml" />
		<mapping resource="mysql/core_department.hbm.xml" />
		<mapping resource="mysql/core_user.hbm.xml" />
		<mapping resource="mysql/core_job.hbm.xml" />
		<mapping resource="mysql/core_role.hbm.xml" />
		<mapping resource="mysql/core_role_user_relation.hbm.xml" />
		<mapping resource="mysql/core_op.hbm.xml" />
		<mapping resource="mysql/core_op_role_relation.hbm.xml" />
		<mapping resource="mysql/core_topmenu.hbm.xml" />
		<mapping resource="mysql/core_topmenu_role_relation.hbm.xml" />
		<mapping resource="mysql/core_leftmenu.hbm.xml" />
		<mapping resource="mysql/core_leftmenu_role_relation.hbm.xml" />
		<mapping resource="mysql/core_pinyin.hbm.xml" />
	</session-factory>
</hibernate-configuration>
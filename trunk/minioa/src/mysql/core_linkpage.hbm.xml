<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="Linkpage" table="core_linkpage">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="MID_" column="MID_" type="java.lang.Integer"/>
			<property name="MDATE_" column="MDATE_" type="java.util.Date"/>
			<property name="appName" column="appName" type="java.lang.String"/>
			<property name="appDesc" column="appDesc" type="java.lang.String"/>
			<property name="userName" column="userName" type="java.lang.String"/>
			<property name="password" column="password" type="java.lang.String"/>
    </class>
    <sql-query name="core.linkpage.select.records">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	appName,appDesc,userName,password
        from core_linkpage 
        where CID_ = :userId
        order by appName limit :limit offset :offset
    ]]>
    </sql-query>
    <sql-query name="core.linkpage.select.records.count">
    <![CDATA[
        select count(*) as ds from core_linkpage
    ]]>
    </sql-query>
		<sql-query name="core.linkpage.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	appName,appDesc,userName,password
        from core_linkpage
        where ID_ = :id
    ]]>
    </sql-query>

    <sql-query name="core.linkpage.update.record.where.id">
    <![CDATA[
        update core_linkpage set MID_ = :mId, MDATE_ = :mDate, 
        	appName = :appName, appDesc = :appDesc, password = :password, userName = :userName
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.linkpage.delete.record.where.id">
    <![CDATA[
        delete from core_linkpage where ID_ = :id
    ]]>
    </sql-query>
</hibernate-mapping>
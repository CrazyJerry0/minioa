<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <sql-query name="core.log.insert.record">
    <![CDATA[
        insert into core_log(CID_,CDATE_,logType,userIp,logContent) values(:cId,:cDate,:logType,:userIp,:logContent)
    ]]>
    </sql-query>
    <sql-query name="core.log.select.records">
    <![CDATA[
        select l.ID_,l.CID_,l.CDATE_,
        	l.logType,l.userIp,l.logContent,u.displayName
        from core_log l
        left join core_user u on u.ID_ = l.CID_
    ]]>
    </sql-query>
    <sql-query name="core.log.select.records.count">
    <![CDATA[
        select count(*) as result from core_log
    ]]>
    </sql-query>
    <sql-query name="core.log.delete.record.where.id">
    <![CDATA[
        delete from core_log where ID_ = :id
    ]]>
    </sql-query>
</hibernate-mapping>
<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <sql-query name="core.hanzipinyin.insert.record">
    <![CDATA[
        insert into core_hanzipinyin(CID_,CDATE_,hanzi,pinyin) values(:cId,sysdate(), :hanzi,:pinyin)
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.select.records">
    <![CDATA[
        select hz.ID_,hz.CID_,hz.CDATE_,hz.MID_,hz.MDATE_,
        	hz.hanzi,hz.pinyin,
        	u.displayName
        from core_hanzipinyin hz
        left join core_user u on u.ID_ = hz.MID_
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.select.records.count">
    <![CDATA[
        select count(*) as result from core_hanzipinyin
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.select.record.where.id">
    <![CDATA[
       select hz.ID_,hz.CID_,hz.CDATE_,hz.MID_,hz.MDATE_,
        	hz.hanzi,hz.pinyin
        from core_hanzipinyin hz
        where hz.ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.update.record.where.id">
    <![CDATA[
        update core_hanzipinyin set MID_ = :mId, MDATE_ = sysdate(),
        	hanzi=:hanzi,
					pinyin=:pinyin
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.exists.where.id">
    <![CDATA[
        select count(*) from core_hanzipinyin where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.delete.record.where.id">
    <![CDATA[
        delete from core_hanzipinyin where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.hanzipinyin.getpinyin">
    <![CDATA[
        select core_getpinyin_f(:hanzi) from dual
    ]]>
    </sql-query>
</hibernate-mapping>
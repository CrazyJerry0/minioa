<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="MailAttachment" table="core_mail_attachment">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="messageId" column="messageId" type="java.lang.String"/>
			<property name="fileName" column="fileName" type="java.lang.String"/>
			<property name="fileType" column="fileType" type="java.lang.String"/>
			<property name="fileSize" column="fileSize" type="java.lang.String"/>
			<property name="oldName" column="oldName" type="java.lang.String"/>
			<property name="box" column="box" type="java.lang.String"/>
    </class>
    <sql-query name="core.MailAttachment.select.records">
    <![CDATA[
        select ID_,CID_,CDATE_,
        	messageId,fileName,filetype,fileSize,oldName,box
        from core_mail_attachment where messageId in (select messageId from core_mail_message where ID_ = :id) order by oldName
    ]]>
    </sql-query>
    <sql-query name="core.MailAttachment.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,
        	messageId,fileName,filetype,fileSize,oldName,box
        from core_mail_attachment where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.MailAttachment.delete.record.where.id">
    <![CDATA[
        delete from core_mail_attachment where messageId = :messageId
    ]]>
    </sql-query>
</hibernate-mapping>
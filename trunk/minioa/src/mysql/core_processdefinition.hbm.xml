<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <sql-query name="core.processdefinition.insert.record">
    <![CDATA[
        insert into core_processdefinition(CID_,CDATE_,processName,formPath,sqlwhencreate,sqlwhendelete,sqlwhencomplete) values(:cId,:cDate,:processName,:formPath,:sqlwhencreate,:sqlwhendelete,:sqlwhencomplete)
    ]]>
    </sql-query>
    <sql-query name="core.processdefinition.select.records">
    <![CDATA[
        select pro.ID_,pro.CID_,pro.CDATE_,pro.processName,pro.formPath,pro.processImage,pro.sqlwhencreate,pro.sqlwhendelete,pro.sqlwhencomplete
        from core_processdefinition pro
    ]]>
    </sql-query>
    <sql-query name="core.processdefinition.select.records.count">
    <![CDATA[
        select count(*) as result from core_processdefinition
    ]]>
    </sql-query>
    <sql-query name="core.processdefinition.select.record.where.id">
    <![CDATA[
        select pro.ID_,pro.CID_,pro.CDATE_,pro.processName,pro.formPath,pro.processImage,pro.sqlwhencreate,pro.sqlwhendelete,pro.sqlwhencomplete
        from core_processdefinition pro
        where pro.ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.processdefinition.update.record.where.id">
    <![CDATA[
        update core_processdefinition set MID_ = :mId, MDATE_ = :mDate, 
        	processName = :processName, formPath = :formPath, 
        	sqlwhencreate = :sqlwhencreate,sqlwhendelete = :sqlwhendelete,sqlwhencomplete = :sqlwhencomplete
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.processdefinition.update.record.image.where.id">
    <![CDATA[
        update core_processdefinition set MID_ = :mId, MDATE_ = :mDate,
        	processImage = :processImage
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.processdefinition.delete.record.where.id">
    <![CDATA[
        delete from core_processdefinition where ID_ = :id
    ]]>
    </sql-query>
</hibernate-mapping>
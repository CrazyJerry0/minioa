<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="Department" table="core_department">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="MID_" column="MID_" type="java.lang.Integer"/>
			<property name="MDATE_" column="MDATE_" type="java.util.Date"/>
			<property name="depaCode" column="depaCode" type="java.lang.String"/>
			<property name="depaName" column="depaName" type="java.lang.String"/>
    </class>
    <sql-query name="core.department.select.records.all">
    <![CDATA[
        select ID_,depaCode,depaName
        from core_department order by depaCode
    ]]>
    </sql-query>
    <sql-query name="core.department.select.records">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	depaCode,core_department_fullname_bycode_f(depaCode)
        from core_department
    ]]>
    </sql-query>
    <sql-query name="core.department.select.records.count">
    <![CDATA[
        select count(*) as result from core_department
    ]]>
    </sql-query>
    <sql-query name="core.department.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	depaCode,depaName
        from core_department where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.department.select.records.code.where.id">
    <![CDATA[
        select 
        	depaCode
        from core_department where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.department.update.record.where.id">
    <![CDATA[
        update core_department set MID_ = :mId, MDATE_ = :mDate, 
        	depaCode = :depaCode, depaName = :depaName
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.department.delete.record.where.id">
    <![CDATA[
        delete from core_department where ID_ = :id
    ]]>
    </sql-query>
</hibernate-mapping>
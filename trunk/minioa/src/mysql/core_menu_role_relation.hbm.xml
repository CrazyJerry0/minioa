<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="MenuRoleRelation" table="core_menu_role_relation">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
			<property name="menuId" column="menuId" type="java.lang.Integer"/>
			<property name="roleId" column="roleId" type="java.lang.Integer"/>
    </class>
    <sql-query name="core.menu.role.relation.select.records">
    <![CDATA[
        select o.ID_,o.menuCode,o.menuName,IFNULL(r.roleId,0)
        from core_menu o
        left join core_menu_role_relation r on r.menuId = o.ID_ and r.roleId = :relationId
        order by o.menuCode
    ]]>
    </sql-query>
    <sql-query name="core.menu.role.relation.delete.record.where.id">
    <![CDATA[
        delete from core_menu_role_relation where menuId = :menuId and roleId = :roleId
    ]]>
    </sql-query>
    <sql-query name="core.menu.role.relation.delete.record.where.menu.id">
    <![CDATA[
        delete from core_menu_role_relation where menuId = :menuId
    ]]>
    </sql-query>
    <sql-query name="core.menu.role.relation.record.isExist">
    <![CDATA[
        select count(*) as ds from core_menu_role_relation where menuId = :menuId and roleId = :roleId
    ]]>
    </sql-query>
</hibernate-mapping>
<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="Menu" table="core_menu">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="MID_" column="MID_" type="java.lang.Integer"/>
			<property name="MDATE_" column="MDATE_" type="java.util.Date"/>
			<property name="menuCode" column="menuCode" type="java.lang.String"/>
			<property name="menuName" column="menuName" type="java.lang.String"/>
			<property name="menuUrl" column="menuUrl" type="java.lang.String"/>
			<property name="menuTarget" column="menuTarget" type="java.lang.String"/>
    </class>
    <sql-query name="core.menu.select.records">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	menuCode,menuName,menuUrl,menuTarget
        from core_menu
    ]]>
    </sql-query>
    <sql-query name="core.menu.select.records.all">
    <![CDATA[
        select o.ID_,o.CID_,o.CDATE_,o.MID_,o.MDATE_,
        	o.menuCode,o.menuName,o.menuUrl,o.menuTarget
        from core_menu o
        where o.ID_ in (select r.menuId from core_menu_role_relation r where r.roleId in (select u.roleId from core_role_user_relation u where u.userId = :userId))
        order by o.menuCode
    ]]>
    </sql-query>
    <sql-query name="core.menu.select.records.count">
    <![CDATA[
        select count(*) as ds from core_menu
    ]]>
    </sql-query>
		<sql-query name="core.menu.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	menuCode,menuName,menuUrl,menuTarget
        from core_menu
        where ID_ = :id
    ]]>
    </sql-query>

    <sql-query name="core.menu.update.record.where.id">
    <![CDATA[
        update core_menu set MID_ = :mId, MDATE_ = :mDate, 
        	menuCode = :menuCode, menuName = :menuName, menuTarget = :menuTarget, menuUrl = :menuUrl
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.menu.delete.record.where.id">
    <![CDATA[
        call core_delmenu(:id)
    ]]>
    </sql-query>
</hibernate-mapping>
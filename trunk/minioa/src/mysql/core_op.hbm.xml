<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="Op" table="core_op">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="MID_" column="MID_" type="java.lang.Integer"/>
			<property name="MDATE_" column="MDATE_" type="java.util.Date"/>
			<property name="opName" column="opName" type="java.lang.String"/>
			<property name="opDesc" column="opDesc" type="java.lang.String"/>
    </class>
    <sql-query name="core.op.select.records">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	opName,opDesc
        from core_op
    ]]>
    </sql-query>
    <sql-query name="core.op.select.records.count">
    <![CDATA[
        select count(*) as result from core_op
    ]]>
    </sql-query>
    <sql-query name="core.op.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	opName,opDesc
        from core_op where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.op.update.record.where.id">
    <![CDATA[
        update core_op set MID_ = :mId, MDATE_ = :mDate,
        	opName = :opName, opDesc = :opDesc
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.op.delete.record.where.id">
    <![CDATA[
        call core_delop(:id)
    ]]>
    </sql-query>
		<sql-query name="core.op.getOpId.where.opName">
    <![CDATA[
        select ID_
        from core_op where opName = :opName limit 1
    ]]>
    </sql-query>
    <sql-query name="core.op.select.records.list">
    <![CDATA[
        select ID_, opName
        from core_op
        order by opName
    ]]>
    </sql-query>
</hibernate-mapping>
<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="Basicdata" table="core_basicdata">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="MID_" column="MID_" type="java.lang.Integer"/>
			<property name="MDATE_" column="MDATE_" type="java.util.Date"/>
			<property name="name" column="name" type="java.lang.String"/>
			<property name="value" column="value" type="java.lang.String"/>
			<property name="value2" column="value2" type="java.lang.String"/>
			<property name="sequence" column="sequence" type="java.lang.Integer"/>
    </class>
    <sql-query name="core.basicdata.select.records">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	name,value,value2,sequence
        from core_basicdata
    ]]>
    </sql-query>
    <sql-query name="core.basicdata.select.records.valueList">
    <![CDATA[
        select name,value,value2
        from core_basicdata order by name,sequence,value,value2
    ]]>
    </sql-query>
    <sql-query name="core.basicdata.select.records2">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	name,value,value2,sequence
        from core_basicdata order by name
    ]]>
    </sql-query>
    <sql-query name="core.basicdata.select.records.count">
    <![CDATA[
        select count(*) as ds from core_basicdata
    ]]>
    </sql-query>
		<sql-query name="core.basicdata.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	name,value,value2,sequence
        from core_basicdata
        where ID_ = :id
    ]]>
    </sql-query>

    <sql-query name="core.basicdata.update.record.where.id">
    <![CDATA[
        update core_basicdata set MID_ = :mId, MDATE_ = :mDate, 
        	name = :name, value = :value, value2 = :value2, sequence = :sequence
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.basicdata.delete.record.where.id">
    <![CDATA[
        delete from core_basicdata where ID_ = :id
    ]]>
    </sql-query>
</hibernate-mapping>
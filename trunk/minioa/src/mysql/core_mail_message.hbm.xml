<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" package="org.minioa.core">
    <class name="MailMessage" table="core_mail_message">
      <id name="ID_" column="ID_" type="java.lang.Integer">
      	<generator class="increment" />
      </id>
      <property name="CID_" column="CID_" type="java.lang.Integer"/>
			<property name="CDATE_" column="CDATE_" type="java.util.Date"/>
			<property name="MID_" column="MID_" type="java.lang.Integer"/>
			<property name="MDATE_" column="MDATE_" type="java.util.Date"/>
			<property name="accountId" column="accountId" type="java.lang.String"/>
			<property name="messageId" column="messageId" type="java.lang.String"/>
			<property name="fromName" column="fromName" type="java.lang.String"/>
			<property name="fromAddress" column="fromAddress" type="java.lang.String"/>
			<property name="toName" column="toName" type="java.lang.String"/>
			<property name="toAddress" column="toAddress" type="java.lang.String"/>
			<property name="ccName" column="ccName" type="java.lang.String"/>
			<property name="ccAddress" column="ccAddress" type="java.lang.String"/>
			<property name="bccName" column="bccName" type="java.lang.String"/>
			<property name="bccAddress" column="bccAddress" type="java.lang.String"/>
			<property name="subject" column="subject" type="java.lang.String"/>
			<property name="body" column="body" type="java.lang.String"/>
			<property name="sendDate" column="sendDate" type="java.lang.String"/>
			<property name="hasAtt" column="hasAtt" type="java.lang.String"/>
			<property name="hasRead" column="hasRead" type="java.lang.String"/>
			<property name="size" column="size" type="java.lang.String"/>
			<property name="box" column="box" type="java.lang.String"/>
    </class>
    <sql-query name="core.MailMessage.select.records">
    <![CDATA[
        select ta.ID_,ta.CID_,ta.CDATE_,ta.MID_,ta.MDATE_,
        	ta.accountId,ta.messageId,ta.fromName,ta.fromAddress,ta.toName,ta.toAddress,ta.ccName,ta.ccAddress,ta.bccName,ta.bccAddress,
          ifnull(subject,'No Subejct'),'null',ta.sendDate,ta.hasAtt,ta.hasRead,ta.size,ta.box,
          concat(tb.username,'@',tb.server)
        from core_mail_message ta
				left join core_mail_account tb on tb.ID_ = ta.accountId
    ]]>
    </sql-query>
    <sql-query name="core.MailMessage.select.records.count">
    <![CDATA[
        select count(*) as result from core_mail_message
    ]]>
    </sql-query>
    <sql-query name="core.MailMessage.select.records.where.id">
    <![CDATA[
        select ID_,CID_,CDATE_,MID_,MDATE_,
        	accountId,messageId,fromName,fromAddress,toName,toAddress,ccName,ccAddress,bccName,bccAddress,ifnull(subject,'No Subejct'),body,sendDate,hasAtt,hasRead,size,box
        from core_mail_message where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.MailMessage.update.record.where.id">
    <![CDATA[
        update core_mail_message set MID_ = :mId, MDATE_ = :mDate,
        	hasRead = :hasRead
        where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.MailMessage.select.messageId.where.id">
    <![CDATA[
        select messageId from core_mail_message where ID_ = :id
    ]]>
    </sql-query>
    <sql-query name="core.MailMessage.delete.record.where.id">
    <![CDATA[
        delete from core_mail_message where ID_ = :id
    ]]>
    </sql-query>
</hibernate-mapping>